<!DOCTYPE html>
<html lang="en">
<head>
  <title>Quiz App: New Quiz ðŸ§ </title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <!-- EXTERNAL STYLESHEETS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />


   <!-- OUR STYLESHEETS -->
   <link rel="stylesheet" href="/styles/all.css" />
   <link rel="stylesheet" href="/styles/header.css" />
   <link rel="stylesheet" href="/styles/footer.css" />
   <link rel="stylesheet" href="/styles/quiz_form.css" />

  <!-- SCRIPTS-->

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/quiz_form.js"></script>
</head>
<body>
  <%- include('partials/__header') %>
  <main>
    <h1>Your New Quiz</h1>
    <form action="/api" method="POST" id="quiz_form">
      <fieldset class="quiz_details">
        <legend>Your Quiz Details</legend>

        <label for="quiz_title">Your Quiz Title</label>
        <input type="text" name="quiz_title" id="quiz_title"/>

        <label for="quiz_description">Quiz Description</label>
        <textarea name="quiz_description" id="quiz_description"></textarea>

      </fieldset>

          <!-- JQUERY APPENDS THE QUESTIONS HERE -->
          
      <div id="form_foot">
        <button class="add_question">Add Another Question</button>
        <button type="submit" id="submit">Create Quiz!</button>
      </div>

    </form>

  </main>
</body>
</html>

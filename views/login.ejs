<!-- Login Page -->

<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quiz App - Login</title>

  <link href="/docs/owl.png" rel="icon" type="image/x-icon" />


  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <!-- EXTERNAL STYLESHEETS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Unicase:wght@700&family=Quicksand:wght@300;400;500;600&display=swap" rel="stylesheet">

   <!-- OUR STYLESHEETS -->
  <link rel="stylesheet" href="/styles/all.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/footer.css" />
  <link rel="stylesheet" href="/styles/login_register.css" />

  <!-- SCRIPTS-->
  <script src="/vendor/jquery-3.0.0.js"></script>
</head>

<body>
  <%- include('partials/__header') %>
  <main>
    <h1>Login</h1>
    <% if (errorMessage) { %>
      <p class="error"><%= errorMessage %></p>
    <% } %>
    <form action="/api/login" method="POST">
      <input
        type="text"
        name="email"
        placeholder="Email"
      />
      <input
        type="password"
        name="password"
        placeholder="Password"
      />
      <button type="submit">Login</button>
    </form>
  </main>
  <%- include('partials/__footer') %>
</body>

</html>
